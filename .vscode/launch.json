{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Proxy with Defaults",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": [
        "--listen",
        "localhost:9999",
        "--ca-cert",
        "ssl/ca.crt",
        "--ca-key",
        "ssl/ca.key",
        "--log-level",
        "DEBUG"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "build-frontend"
    },
    {
      // Used for starting the frontend in dev mode seperately.
      "name": "Debug Proxy with Dashboard disabled",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": [
        "--listen",
        "localhost:9999",
        "--ca-cert",
        "ssl/ca.crt",
        "--ca-key",
        "ssl/ca.key",
        "--no-dashboard",
        "--log-level",
        "DEBUG"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Dashboard",
      "cwd": "${workspaceFolder}/webserver/dashboard/frontend",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "request": "launch"
    }
  ],
  "compounds": [
    {
      "name": "Debug Proxy + Dashboard",
      "configurations": [
        "Debug Proxy with Dashboard disabled",
        "Debug Dashboard"
      ],
      "stopAll": true
    }
  ]
}
